<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="60dp"
        android:layout_width="60dp">
        <ImageView
            android:onClick="Pindah"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/vira"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:background="#4D000000"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:id="@+id/btn_buka_oppo"
                        android:layout_marginBottom="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/h_oppo" />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Hanphone"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:background="#4D000000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="50dp"
                        android:layout_gravity="bottom"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:scaleType="fitXY"
                        android:id="@+id/btn_buka_Laptop"
                        android:src="@drawable/l_acer" />
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Laptop"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:background="#4D000000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="50dp"
                        android:layout_gravity="bottom"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:scaleType="fitXY"
                        android:id="@+id/btn_buka_Televisi"
                        android:src="@drawable/t_lg" />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Televisi"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:background="#4D000000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="50dp"
                        android:layout_gravity="bottom"/>
                </FrameLayout>
            </LinearLayout>

        </ScrollView>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>